    <docsection name="doc_1"
        text="Description">
        <doctext name="txt"
            text="This platform merges the Altera Cyclone V (ARM) and Cyclone III (Nios_II) processor systems"/>
    </docsection>
    <docsection name="doc_2"
        text="Limitations">
        <doctext name="txt"
            text="Peripherals are modeled only to the extent required to boot and run Operating Systems such as Linux."/>
    </docsection>
    <docsection name="doc_3"
        text="Reference">
        <doctext name="txt"
            text="Altera Cyclone III 3c120 Reference Guide and Cyclone V Handbook Volume 3: Hard Processor System Technical Reference Manual cv_5v4 2013.12.30"/>
    </docsection>
