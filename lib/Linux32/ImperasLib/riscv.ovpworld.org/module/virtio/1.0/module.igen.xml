<?xml version="1.0" encoding="UTF-8"?>

 <hw diagnostics="F"
    httpvis="F"
    library="module"
    name="virtio"
    purpose="4"
    releasestatus="4"
    saverestore="F"
    stoponctrlc="T"
    vendor="riscv.ovpworld.org"
    verbose="F"
    version="1.0"
    visibility="0">
    <nets name="nets">
        <net name="irqT0"/>
        <net name="irqT1"/>
        <net name="irqS1"/>
        <net name="irqS2"/>
        <net name="irqS10"/>
        <net name="MTimerInterrupt0"/>
        <net name="MSWInterrupt0"/>
    </nets>
    <docsection name="doc"
        text="Licensing">
        <doctext name="txt"
            text="Open Source Apache 2.0"/>
    </docsection>
    <docsection name="doc_1"
        text="Description">
        <doctext name="txt"
            text="Virtio System Platform to boot BusyBear-Linux Kernel"/>
    </docsection>
    <docsection name="doc_2"
        text="Reference">
        <doctext name="txt"
            text="Virtio System Platform"/>
    </docsection>
    <docsection name="doc_3"
        text="Limitations">
        <doctext name="txt"
            text="Sufficient functionality to boot BusyBear-Linux Kernel using the Virtio platform"/>
    </docsection>
    <processorinstance mips="50"
        name="hart0"
        simulateexceptions="T">
        <vlnvreference library="processor"
            name="riscv"
            vendor="riscv.ovpworld.org"
            version="1.0"/>
        <attribute content="RVB64I"
            name="variant"/>
        <attribute content="MAFDCSU"
            name="add_Extensions"/>
        <attribute content="0x1000"
            name="reset_address"/>
        <attribute content="True"
            name="time_undefined"/>
        <busmasterportconnection connection="bus0"
            name="INSTRUCTION"/>
        <busmasterportconnection connection="bus0"
            name="DATA"/>
        <netportconnection connection="irqT0"
            name="MExternalInterrupt"/>
        <netportconnection connection="irqT1"
            name="SExternalInterrupt"/>
        <netportconnection connection="MTimerInterrupt0"
            name="MTimerInterrupt"/>
        <netportconnection connection="MSWInterrupt0"
            name="MSWInterrupt"/>
    </processorinstance>
    <bus addresswidth="48"
        name="bus0"/>
    <memoryinstance name="bootram">
        <vlnvreference name="ram"/>
        <busslaveportconnection connection="bus0"
            hiaddress="16383"
            loaddress="0x1000"
            name="sp1"/>
    </memoryinstance>
    <memoryinstance name="main">
        <vlnvreference name="ram"/>
        <busslaveportconnection connection="bus0"
            hiaddress="2281701375"
            loaddress="0x80000000"
            name="sp1"/>
    </memoryinstance>
    <peripheralinstance name="VBD0">
        <vlnvreference name="VirtioBlkMMIO"
            vendor="ovpworld.org"/>
        <busmasterportconnection connection="bus0"
            hiaddress="0xffffffff"
            loaddress="0"
            name="dma"/>
        <busslaveportconnection connection="bus0"
            hiaddress="0x100011ff"
            loaddress="0x10001000"
            name="bport1"/>
        <netportconnection connection="irqS1"
            name="Interrupt"/>
    </peripheralinstance>
    <peripheralinstance name="VND0">
        <vlnvreference name="VirtioNetMMIO"
            vendor="ovpworld.org"/>
        <busmasterportconnection connection="bus0"
            hiaddress="0xffffffff"
            loaddress="0"
            name="dma"/>
        <busslaveportconnection connection="bus0"
            hiaddress="0x100021ff"
            loaddress="0x10002000"
            name="bport1"/>
        <netportconnection connection="irqS2"
            name="Interrupt"/>
    </peripheralinstance>
    <peripheralinstance name="virtio_mmio3">
        <vlnvreference name="trap"
            vendor="ovpworld.org"/>
        <busslaveportconnection connection="bus0"
            name="bport1"
            remappable="T"/>
        <attribute content="0x10003000"
            name="portAddress"/>
        <attribute content="4096"
            name="portSize"/>
        <attribute content="True"
            name="cbEnable"/>
    </peripheralinstance>
    <peripheralinstance name="virtio_mmio4">
        <vlnvreference name="trap"
            vendor="ovpworld.org"/>
        <busslaveportconnection connection="bus0"
            name="bport1"
            remappable="T"/>
        <attribute content="0x10004000"
            name="portAddress"/>
        <attribute content="4096"
            name="portSize"/>
        <attribute content="True"
            name="cbEnable"/>
    </peripheralinstance>
    <peripheralinstance name="virtio_mmio5">
        <vlnvreference name="trap"
            vendor="ovpworld.org"/>
        <busslaveportconnection connection="bus0"
            name="bport1"
            remappable="T"/>
        <attribute content="0x10005000"
            name="portAddress"/>
        <attribute content="4096"
            name="portSize"/>
        <attribute content="True"
            name="cbEnable"/>
    </peripheralinstance>
    <peripheralinstance name="virtio_mmio6">
        <vlnvreference name="trap"
            vendor="ovpworld.org"/>
        <busslaveportconnection connection="bus0"
            name="bport1"
            remappable="T"/>
        <attribute content="0x10006000"
            name="portAddress"/>
        <attribute content="4096"
            name="portSize"/>
        <attribute content="True"
            name="cbEnable"/>
    </peripheralinstance>
    <peripheralinstance name="virtio_mmio7">
        <vlnvreference name="trap"
            vendor="ovpworld.org"/>
        <busslaveportconnection connection="bus0"
            name="bport1"
            remappable="T"/>
        <attribute content="0x10007000"
            name="portAddress"/>
        <attribute content="4096"
            name="portSize"/>
        <attribute content="True"
            name="cbEnable"/>
    </peripheralinstance>
    <peripheralinstance name="virtio_mmio8">
        <vlnvreference name="trap"
            vendor="ovpworld.org"/>
        <busslaveportconnection connection="bus0"
            name="bport1"
            remappable="T"/>
        <attribute content="0x10008000"
            name="portAddress"/>
        <attribute content="4096"
            name="portSize"/>
        <attribute content="True"
            name="cbEnable"/>
    </peripheralinstance>
    <peripheralinstance name="clint">
        <vlnvreference library="peripheral"
            name="CLINT"
            vendor="riscv.ovpworld.org"
            version="1.0"/>
        <busslaveportconnection connection="bus0"
            hiaddress="0x0200BFFF"
            loaddress="0x02000000"
            name="port0"/>
        <attribute content="1"
            name="num_harts"/>
        <attribute content="25.0"
            name="clockMHz"/>
        <netportconnection connection="MTimerInterrupt0"
            name="MTimerInterrupt0"/>
        <netportconnection connection="MSWInterrupt0"
            name="MSWInterrupt0"/>
    </peripheralinstance>
    <peripheralinstance name="plic">
        <vlnvreference library="peripheral"
            name="PLIC"
            vendor="riscv.ovpworld.org"
            version="1.0"/>
        <busslaveportconnection connection="bus0"
            hiaddress="0x0FFFFFFF"
            loaddress="0x0C000000"
            name="port0"/>
        <attribute content="10"
            name="num_sources"/>
        <attribute content="2"
            name="num_targets"/>
        <netportconnection connection="irqT0"
            name="irqT0"/>
        <netportconnection connection="irqT1"
            name="irqT1"/>
        <netportconnection connection="irqS1"
            name="irqS1"/>
        <netportconnection connection="irqS2"
            name="irqS2"/>
        <netportconnection connection="irqS10"
            name="irqS10"/>
    </peripheralinstance>
    <peripheralinstance name="uartTTY0">
        <vlnvreference library="peripheral"
            name="16550"
            vendor="national.ovpworld.org"
            version="1.0"/>
        <busslaveportconnection connection="bus0"
            hiaddress="0x10000007"
            loaddress="0x10000000"
            name="bport1"/>
        <netportconnection connection="irqS10"
            name="intOut"/>
    </peripheralinstance>
    <peripheralinstance name="smartLoader">
        <vlnvreference name="SmartLoaderRV64Linux"
            vendor="riscv.ovpworld.org"
            version="1.0"/>
        <busmasterportconnection connection="bus0"
            hiaddress="0xffffffff"
            loaddress="0"
            name="mport"/>
        <attribute content="0x80000000"
            name="bootaddr"/>
        <attribute content="0x1000"
            name="slbootaddr"/>
        <attribute content="0x80000000"
            name="membase"/>
        <attribute content="0x08000000"
            name="memsize"/>
    </peripheralinstance>
    <attribute content="1"
        name="stoponcontrolc"/>
